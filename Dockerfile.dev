# Development Dockerfile with hot reload
FROM node:22-alpine

RUN apk add --no-cache libc6-compat

WORKDIR /app

# Enable pnpm
RUN corepack enable pnpm

# Copy package files
COPY package.json pnpm-lock.yaml* ./

# Install dependencies
RUN pnpm install

# Copy the rest of the application
COPY . .

EXPOSE 3000

ENV PORT=3000

CMD ["pnpm", "dev"]